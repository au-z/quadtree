body {
	position: absolute
	margin: 0
	padding: 0
	display: flex
	height: 100%
	width: 100%
	justify-content: center
	align-items: center
	background: #333
}

.quadtree {
	position: relative
	background: #333

	-webkit-transform: rotate(0deg)
	-moz-transform: rotate(0deg)
	-ms-transform: rotate(0deg)
	-o-transform: rotate(0deg)
	transform: rotate(0deg)

	.node {
		position: fixed
		border: 1px solid #555
	}

	.point {
		position: fixed
		width: 4px
		height: 4px
		border-radius: 4px
		border: 1px solid #ddd
	}
}
